#!/bin/bash
# vim: set syntax=bash

set -euo pipefail
set -x

if (( $# < 1 ));
then
    echo "Usage: $(basename $0) <wifi name>"
    exit 1
fi

name=$1

if [[ "${name}" == list ]];
then
    watch -d 'nmcli d wifi list'
else
    nmcli c up "${name}"
    sudo systemctl restart wg-quick@wg0.service
    sudo systemctl restart wg-quick@wg1.service
fi
