{
    "workbench.colorTheme": "Default Light+",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "all",
    "explorer.confirmDragAndDrop": false,
    "[yaml]": {

        "editor.tabSize": 2,
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        }
    },
    "cmake.configureOnOpen": true,
    "workbench.editor.enablePreview": false,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "go.formatTool": "goimports",
    "go.lintTool": "golangci-lint",
    "go.delveConfig": {
        "dlvLoadConfig": {
            "followPointers": true,
            "maxVariableRecurse": 1,
            "maxStringLen": 64,
            "maxArrayValues": 64,
            "maxStructFields": -1
        },
        "apiVersion": 2,
        "showGlobalVariables": false
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "gitlens.showWhatsNewAfterUpgrades": false,
    "files.trimTrailingWhitespace": true,
    "explorer.confirmDelete": false,
    "editor.tabSize": 2,
    "editor.scrollBeyondLastLine": false, // neovim advises to turn this off
    "java.project.importOnFirstTimeStartup": "automatic",
    "redhat.telemetry.enabled": true,
    "go.toolsManagement.autoUpdate": true,
    // "vim.statusBarColors.replace": "",
    // "vim.handleKeys": {
    //     "<C-h>": false
    // },
    "C_Cpp.updateChannel": "Insiders",
    "editor.cursorSurroundingLines": 7,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "go.buildTags": "release_stage_development",
    "go.lintOnSave": "off",
    "editor.rulers": [
     120
    ],
    "javascript.updateImportsOnFileMove.enabled": "always",
    "go.testFlags": [
        "-count=1",
        "-v"
    ],
    "editor.cursorStyle": "line",
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "security.workspace.trust.untrustedFiles": "open",
    "emeraldwalk.runonsave": {

    },
    "yaml.format.printWidth": 120,
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "typescript.tsdk": "/home/bobbel/.nvm/versions/node/v15.14.0/lib/node_modules/typescript/lib",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.autoSave": "onFocusChange",
    "editor.formatOnSaveMode": "modifications",
    "files.autoSaveDelay": 10000,
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
    "go.vetOnSave": "off",
    "go.buildOnSave": "workspace",
    "rust-analyzer.checkOnSave.command": "clippy"
}
